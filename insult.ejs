<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insult Generator</title>
    <link href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet">


    <style>
        /* Set the display property of the body element to flex to create a flex container */
        body {
            font-family: 'Bangers', cursive;

            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            padding: 0;
            background-image: url('https://i.imgflip.com/3x0vuk.jpg?a466992');
            background-size: cover;
        }

        .flexbox-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .flexbox {
            width: 20%;
            height: 20%;
            padding: 10px;
            display: flex;
            position: absolute;
            top: 0;
            left: 0;
            align-items: center;
            text-align: center;
            font-size: 24px;
            color: #333;
            background-color: white;
            margin: 5px;
            border-radius: 50%;
            /* make the flexbox circular */

        }

        .flexbox::before {
            content: '';
            position: absolute;
            bottom: 0;
            right: 0;
            width: 0;
            height: 0;
            border-top: 100px solid white;
            /* create a triangle at the bottom right */
            border-left: 50px solid transparent;
        }

        .flexbox2 {
            width: 20%;
            height: 20%;
            padding: 10px;
            display: flex;
            position: absolute;
            top: 0;
            right: 0;
            align-items: center;
            text-align: center;
            font-size: 24px;
            color: #333;
            background-color: white;
            margin: 5px;
            border-radius: 50%;
        }

        .flexbox2::before {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 0 90px 50px;
            border-color: transparent transparent white transparent;
            transform: rotate(-180deg);
        }
    </style>
</head>

<body>


    <div id="flexbox-container" class="flexbox-container">

        <div class="flexbox" id="flexbox">
            <p>
                <%= insults[0] %>
            </p>
        </div>
        <div class="flexbox2" id="flexbox">
            <p>
                <%= insults[1] %>
            </p>
        </div>

    </div>



    <script src="https://unpkg.com/popmotion@8.1.24/dist/popmotion.global.min.js"></script>
    <script>
        const { tween, styler, easing } = popmotion;

        document.addEventListener('DOMContentLoaded', () => {
            console.log("Document loaded...")
            const flexboxes = document.querySelectorAll('.flexbox');
            flexboxes.forEach((flexbox) => {
                const boxStyler = styler(flexbox);
                tween({
                    from: { opacity: 0 },
                    to: { opacity: 1 },
                    duration: 500,
                    ease: easing.easeInOut,
                }).start({
                    update: (v) => {
                        boxStyler.set(v);
                    },
                });
            });
        });
    </script>
</body>

</html>